<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/welcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="60dp"
    android:paddingVertical="10dp"
    tools:context=".HotelPageActivity"
    android:background="@drawable/welcomebg"


    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explore..."
        android:textSize="20dp"
        android:textStyle="bold"


        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewAmanzoe"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="25dp"
                android:clickable="true"
                app:srcCompat="@drawable/amanzoe"

                />

            <TextView
                below
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@+id/imageViewAmanzoe"
                android:text="Amanzoe In Porto Heli, Greece" />

            <RatingBar
                android:id="@+id/RatingAmanzoe"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:rating="5">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"



        </LinearLayout>
    </ScrollView>


</LinearLayout>


