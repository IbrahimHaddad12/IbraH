<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/welcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HotelPageActivity"
    android:background="@drawable/welcomebg"
    android:paddingHorizontal="20dp"
    android:paddingVertical="10dp"

    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explore The Most Exquisite 5 Star Hotels From Around The World"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewAmanzoe"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:clickable="true"
                android:onClick="Amanzoe"
                android:scaleType="fitXY"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/amanzoe" />

            <TextView

                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amanzoe - Porto Heli, Greece"
                android:textSize="15sp"
                />

            <RatingBar
                android:id="@+id/RatingAmanzoe"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:rating="5" />

            <ImageView
                android:id="@+id/imageViewMuraka"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:clickable="true"
                android:scaleType="fitXY"
                android:layout_marginTop="20dp"
                android:src="@drawable/muraka"
                android:onClick="Muraka"

            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="The Muraka - Conrad Maldives "
                android:textSize="15sp"

                />
            <RatingBar
                android:id="@+id/RatingMuraka"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:rating="5" />

            <ImageView
                android:id="@+id/DeLEurope"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:clickable="true"
                android:scaleType="fitXY"
                android:layout_marginTop="20dp"
                android:onClick="DeLEurope"
                android:src="@drawable/amsterdamhotel"

                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="De L'Europe Amsterdam - Amsterdam, Netherlands"
                android:textSize="15sp"
                />

            <RatingBar
                android:id="@+id/RatingAmsterdam"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:rating="5" />

            <ImageView
                android:id="@+id/MandarinOriental"
                android:layout_width="match_parent"
                android:layout_height="262dp"
                android:clickable="true"
                android:onClick="MandarinOriental"
                app:srcCompat="@drawable/mandarinoriental" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mandarin Oriental - Canouan"
                android:textColor="#000000"
                android:textSize="15sp" />

            <RatingBar
                android:id="@+id/RatingMandarinOriental"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:rating="5" />


        </LinearLayout>

    </ScrollView>


</LinearLayout>


